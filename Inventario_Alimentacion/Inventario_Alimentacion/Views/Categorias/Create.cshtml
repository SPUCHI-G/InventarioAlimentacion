@model Inventario_Alimentacion.Models.Categoria

@{
    ViewBag.Title = "Jefe";
    Layout = "~/Views/Shared/_Layoutjefe.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<h1 style="text-align: center">
    <strong class="title" >CREAR CATEGORIA</strong>
</h1>

<h3>NOTA: no se puede repetir nombres de categoria.</h3>
@using (Html.BeginForm("Create", "Categorias", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" >
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Nombre de la Categoria: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBox("Cat_Nombre", "", new { htmlAttributes = new { @class = "form-control" }, required = "required" })
            @Html.ValidationMessageFor(model => model.Cat_Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="align-content">
                <input type="submit" value="GUARDAR" class="btn btn-success" />
                |@Html.ActionLink("Volver a la lista", "BusquedaFilter")
            </div>
        </div>
    </div>
}