@model Inventario_Alimentacion.Models.Usuario

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h1 style="text-align: center">
    <strong class="title">EDITAR REGISTRO DE USUARIOS</strong>
</h1>

<h3>Si desea modificar el nombre de usuario  deberá eliminar el actual usuario y crear un nuevo registro.</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Usu_Nombre)

        <div class="form-group">
            @Html.Label("Nombre de Usuario:    ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Usu_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usu_Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Contraseña:    ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Usu_Contraseña, new { htmlAttributes = new { @class = "form-control", required = "required", type = "password" } })
                @Html.ValidationMessageFor(model => model.Usu_Contraseña, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Estado de cuenta:  ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Activo : @Html.RadioButtonFor(model => model.Usu_Activo, "1")
                Inactivo: @Html.RadioButtonFor(model => model.Usu_Activo, "0")
                @Html.ValidationMessageFor(model => model.Usu_Activo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Empleado asociado:  ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_Empleado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ID_Empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="MODIFICAR" class="btn btn-success" /> |
                @Html.ActionLink("Volver a la lista", "BusquedaFilter")
            </div>
        </div>
    </div>
}
