@model Inventario_Alimentacion.Models.Proveedor

@{
    ViewBag.Title = "Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<h1 style="text-align: center">
    <strong class="title">ELIMINAR PROVEEDOR</strong>
</h1>
<h3>¿Está seguro de eliminar este proveedor?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tipo de documento: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fk_TipoDocum)
        </dd>

        <dt>
            @Html.DisplayName("Documento: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_Docum)
        </dd>

        <dt>
            @Html.DisplayName("Ciudad: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fk_Ciudad)
        </dd>

        <dt>
            @Html.DisplayName("Nombre: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_Nombre)
        </dd>

        <dt>
            @Html.DisplayName("Teléfono: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_Telefono)
        </dd>

        <dt>
            @Html.DisplayName("Celular: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_Celular)
        </dd>

        <dt>
            @Html.DisplayName("Email: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_Email)
        </dd>

        <dt>
            @Html.DisplayName("Direccion: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_Direccion)
        </dd>

        <dt>
            @Html.DisplayName("FAX: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_Fax)
        </dd>

        <dt>
            @Html.DisplayName("Actividad económica: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prov_ActiEcono)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("volver a la lista", "BusquedaFilter")
        </div>
    }
</div>
