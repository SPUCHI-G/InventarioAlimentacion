@model Inventario_Alimentacion.Models.Subcategoria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layoutjefe.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<h1 style="text-align: center">
    <strong class="title">CREAR SUBCATEGORIA</strong>
</h1>
<h3>NOTA: no se puede repetir nombres de subcategoria.</h3>
@using (Html.BeginForm("GUARDAR", "Subcategorias", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Categoria: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Categoria", new SelectList(ViewBag.ListaCategoria, "ID_Categoria", "Cat_Nombre"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Subcategoria: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Sub_Nombre", "", new { htmlAttributes = new { @class = "form-control" }, required = "required" })
                @Html.ValidationMessageFor(model => model.Subca_Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                | @Html.ActionLink("Volver a la lista", "BusquedaFilter2", "Subcategorias")
            </div>
        </div>
    </div>
}
