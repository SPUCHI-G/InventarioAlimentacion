@model Inventario_Alimentacion.Models.Subcategoria

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layoutjefe.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center">
                <strong class="title">EDITAR SUBCATEGORIAS</strong>
            </h1>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="row">

            <div class="col-lg-3">

                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_Subcategoria)

            </div>
            <div class="col-lg-9">
                @Html.Label("Nombre de la Categoria: ", htmlAttributes: new { @class = "control-label" })<br />
                @Html.DropDownList("Categoria", new SelectList(ViewBag.ListaCategoria, "ID_Categoria", "Cat_Nombre"), htmlAttributes: new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })<br />


                @Html.Label("Nombre de la Subcategoria: ", htmlAttributes: new { @class = "control-label" })<br />
                @Html.EditorFor(model => model.Subca_Nombre, new { htmlAttributes = new { @class = "form-control", required = "required" } })<br />
                @Html.ValidationMessageFor(model => model.Subca_Nombre, "", new { @class = "text-danger" })<br />
                <input type="submit" value="MODIFICAR" class="btn btn-success" />
                |@Html.ActionLink("Volver a la lista", "BusquedaFilter2", "Subcategorias")
            </div>
        </div>
    }
</div>
