@model Inventario_Alimentacion.Models.Nom_Producto

@{
    ViewBag.Title = "Jefe";
    Layout = "~/Views/Shared/_Layoutjefe.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<h1 style="text-align: center">
    <strong class="title">EDITAR PRODUCTOS</strong>
</h1>
@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_NomProducto)
    <section style="flex-direction: row">

        <table>
            <tr>
                <td>
                    <div class="form-horizontal" style="float: left">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            @Html.Label("Subcategoria: ")
                            @Html.DropDownList("Subcategoria", new SelectList(ViewBag.ListaSubcategoria, "ID_Subcategoria", "Subca_Nombre"), htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Subcategoria, "", new { @class = "text-danger" })

                        </div>
                        <div>
                            @Html.Label("Producto: ")
                            @Html.EditorFor(model => model.NomProducto, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.NomProducto, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </td>
                <td>
                    <div class="form-horizontal" style="float: left">
                        <div>
                            @Html.Label("Punto de pedido:  ")
                            @Html.EditorFor(model => model.Min, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Min, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.Label("Cantidad a Solicitar:  ")
                            @Html.EditorFor(model => model.Punto_pedido, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Punto_pedido, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-horizontal" style="float: left">
                        <div>

                            @Html.Label("¿Necesita información adicional?")
                            Si: @Html.RadioButtonFor(model => model.Prop_Adicion, "True")
                            No: @Html.RadioButtonFor(model => model.Prop_Adicion, "False")
                            @Html.ValidationMessageFor(model => model.Prop_Adicion, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            <input type="submit" value="MODIFICAR" class="btn btn-success" />
                            | @Html.ActionLink("Volver a la lista", "BusquedaFilter3", "Nom_Producto")
                        </div>
                    </div>

                </td>
            </tr>
        </table>
    </section>
}
